@model WebApplication1.Models.EventSponsor

@{
    ViewData["Title"] = "Create";
}

@{if (ViewBag.AddingName == null) {
        <h2>Adding sponsor to event</h2>
    }
    else{
        <h2>Adding new sponsor to event @ViewBag.AddingName</h2>
    }
}

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
        @{if (ViewBag.AddingName == null)
            {

            <label asp-for="EventID" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="EventID" class="form-control" asp-items="ViewBag.EventID"></select>
                        </div>
            }
            else
            {
                <select asp-for="EventID" class="form-control hidden" asp-items="ViewBag.EventID"></select>

            }
        }
        </div>
        <div class="form-group">
            <label asp-for="SponsorID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SponsorID" class ="form-control" asp-items="ViewBag.SponsorID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
