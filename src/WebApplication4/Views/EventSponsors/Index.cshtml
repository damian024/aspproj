@model IEnumerable<WebApplication1.Models.EventSponsor>

@{
    ViewData["Title"] = "Index";
}

<h2>Sponsors of events</h2>

<p>
    <a asp-action="Create">Add new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Events
            </th>

            <th>
                Sponsors
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sponsor.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventSponsorID">Edit</a>|
                    <a asp-action="Delete" asp-route-id="@item.EventSponsorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
